<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
    </div>
  </p>
  <p>
    <div class="form-group">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
    </div>
  </p>
  <p>
    <%= f.submit :class => "btn btn-primary"%>
  </p>
<% end %>
